@page
@model Veterinaria.App.Presentacion.Pages.AdminPropietarioModel
@{
}

<h1>@ViewData["tituloDeLaPagina"]</h1>

<div class="accordion" id="accordionExample">
    <div class="card">
        <div class="card-header" id="headingOne">
            <h2 class="mb-0">
                <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse"
                    data-target="#collapseCrudPropietario" aria-expanded="true" aria-controls="collapseCrudPropietario">
                    Crud Propietario de Mascota
                </button>
            </h2>
        </div>

        <div id="collapseCrudPropietario" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
            <div class="card-body">

                <form>

                    <div class="container">
                        <div class="row">
                            <div class="col-sm">
                                <div class="form-group">
                                    <label for="exampleInputNombre1">Nombre</label>
                                    <input type="text" class="form-control" id="id-admin-propietario-nombre"
                                        aria-describedby="nombreHelp">
                                </div>
                            </div>
                            <div class="col-sm">
                                <div class="form-group">
                                    <label for="exampleInputTelefono1">Teléfono</label>
                                    <input type="tel" class="form-control" id="id-admin-propietario-telefono"
                                        aria-describedby="telefonoHelp">
                                </div>
                            </div>
                            <div class="col-sm">
                                <div class="form-group">
                                    <label for="exampleInputEdad1">Edad</label>
                                    <input type="number" class="form-control" id="id-admin-propietario-edad"
                                        aria-describedby="edadHelp">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="container">
                        <div class="row">
                            <div class="col-sm">
                                <div class="form-group">
                                    <label for="exampleFormControlSelect1">Género</label>
                                    <select class="form-control" id="id-admin-propietario-genero">
                                        <option>Masculino</option>
                                        <option>Femenino</option>
                                        <option>Bisexual</option>
                                        <option>Intersexual</option>
                                        <option>Pansexual</option>
                                        <option>Transexual</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm">
                                <div class="form-group">
                                    <label for="exampleInputDireccion1">Dirección</label>
                                    <input type="text" class="form-control" id="id-admin-propietario-direccion"
                                        aria-describedby="direccionHelp">
                                </div>
                            </div>
                            <div class="col-sm">
                                <div class="form-group">
                                    <label for="exampleInputCorreo1">Correo</label>
                                    <input type="email" class="form-control" id="id-admin-propietario-correo"
                                        aria-describedby="correoHelp">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="container">
                        <div class="row">
                            <div class="col-sm">
                                <div class="form-group">
                                    <label for="exampleInputContraseña1">Contraseña</label>
                                    <input type="password" class="form-control" id="id-admin-propietario-contraseña"
                                        aria-describedby="contraseñaHelp">
                                </div>
                            </div>
                            <div class="col-sm">
                                <div class="form-group">
                                    <label for="exampleInputCargo1">Cargo</label>
                                    <input type="text" class="form-control" id="id-admin-propietario-cargo"
                                        aria-describedby="cargoHelp">
                                </div>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Agregar Propietario</button>
                </form>
            </div>
        </div>



        <div class="card">
            <div class="card-header" id="headingTwo">
                <h2 class="mb-0">
                    <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse"
                        data-target="#collapseListaPropietarios" aria-expanded="true"
                        aria-controls="collapseListaPropietarios">
                        Lista de Propietarios de Mascotas
                    </button>
                </h2>
            </div>

            <div id="collapseListaPropietarios" class="collapse" aria-labelledby="headingTwo"
                data-parent="#accordionExample">
                <div class="card-body">
                    @*<ul class="list-group">

                        @for (int i = 0; i < 10; i++)
                        {
                        <li class="list-group-item">Propietario @i</li>
                        }

                        </ul>*@

                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">First</th>
                                <th scope="col">Last</th>
                                <th scope="col">Handle</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td>Mark</td>
                                <td>Otto</td>
                                <td>mdo</td>
                            </tr>
                            <tr>
                                <th scope="row">2</th>
                                <td>Jacob</td>
                                <td>Thornton</td>
                                <td>fat</td>
                            </tr>
                            <tr>
                                <th scope="row">3</th>
                                <td colspan="2">Larry the Bird</td>
                                <td>twitter</td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>